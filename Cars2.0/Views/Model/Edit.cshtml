@model Cars2._0.Models.ViewModels.ModelViewModel
@using Cars2._0.Extensions
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info"> Edit model of the vehicle </h2>
<form method="post" action="Edit">
    <input hidden asp-for="Model.Id" />
    <div class="form-group row ">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-2">
            <select asp-for="Model.MakeID" asp-items="Model.Makes.ToSelectListItem()" class="form-control"></select>
        </div>
        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn-primary" value="Edit" />
        <a asp-action="Index" class="btn btn-success"> Back </a>
    </div>

</form>

